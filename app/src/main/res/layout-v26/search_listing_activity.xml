<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.pp1.parkingfinder.view.SearchListingActivity">

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:hint="@string/location"
        android:inputType="text" tools:targetApi="o" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="370dp"
        android:layout_height="101dp"
        android:endYear="2100"
        android:headerBackground="@color/CadetBlue"
        android:paddingLeft="10dp"
        android:startYear="1900"></DatePicker>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListings"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@color/Gainsboro" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="202dp" />


    <ScrollView
        android:layout_width="858dp"
        android:layout_height="wrap_content"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="371dp"
        android:layout_height="157dp">

        <Button
            android:id="@+id/btLogout"
            android:layout_width="152dp"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="200dp"
            android:layout_weight="1"
            android:background="@color/Chartreuse"
            android:text="@string/logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="184dp"
            android:layout_height="129dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btMenu"
                android:layout_width="152dp"
                android:layout_height="47dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@color/Chartreuse"
                android:text="@string/options_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"></Button>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>